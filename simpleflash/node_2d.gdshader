void vertex() {
	// Called for every vertex the material is visible on.
}

void fragment() {
	// Called for every pixel the material is visible on.
	vec4 tex_color = texture(TEXTURE, UV);
	if (VERTEX.x > 1.0){
		COLOR = tex_color * vec4(0,1,1, max(abs(sin(TIME)),0.05));
	}
}

